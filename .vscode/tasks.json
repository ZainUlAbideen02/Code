{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & run",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "g++ -g ${file} -o ${fileDirname}\\build\\${fileBasenameNoExtension}.exe && ${fileDirname}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
